{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "target": "ES2024",
    "esModuleInterop": true,
    "isolatedModules":true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions":true,

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}